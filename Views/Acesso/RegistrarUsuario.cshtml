@model Jogos_Academicos.Models.Usuario
@using Jogos_Academicos.Models.Enums
@using Jogos_Academicos.Models.enums

@{
    ViewData["Title"] = "Cadastrar Staff";
    // Usa o layout padrão pois o coordenador já está logado
}

<div class="container" style="max-width: 600px; padding: 20px;">
    <h2 style="color: #6d28d9;">Cadastrar Técnico ou Árbitro</h2>

    @if (ViewBag.Sucesso != null)
    {
        <div class="alert alert-success" style="color: green; font-weight: bold; margin: 10px 0;">
            @ViewBag.Sucesso
        </div>
    }
    @if (ViewBag.Erro != null)
    {
        <div class="alert alert-danger" style="color: red; font-weight: bold; margin: 10px 0;">
            @ViewBag.Erro
        </div>
    }

    <form asp-action="RegistrarUsuario" method="post" style="margin-top: 20px;">

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="NomeCompleto">Nome Completo</label>
            <input asp-for="NomeCompleto" class="form-control" style="width: 100%; padding: 8px;" required />
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="Email">Email de Acesso</label>
            <input asp-for="Email" type="email" class="form-control" style="width: 100%; padding: 8px;" required />
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="Matricula">Matrícula / SIAPE</label>
            <input asp-for="Matricula" class="form-control" style="width: 100%; padding: 8px;" required />
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="Senha">Senha Temporária</label>
            <input asp-for="Senha" type="password" class="form-control" style="width: 100%; padding: 8px;" required />
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="TipoUsuario">Função</label>
            <select asp-for="TipoUsuario" class="form-control" style="width: 100%; padding: 8px;">
                <option value="@Role.Tecnico">Técnico</option>
                <option value="@Role.Arbitro">Árbitro</option>
            </select>
            <small style="color: gray;">Atenção: Atletas devem se cadastrar pelo link público.</small>
        </div>

        <button type="submit" class="btn btn-primary" style="background-color: #6d28d9; color: white; padding: 10px 20px; border: none; cursor: pointer; border-radius: 5px;">
            Cadastrar Usuário
        </button>

        <a asp-controller="Evento" asp-action="Index" style="margin-left: 15px;">Voltar ao Painel</a>
    </form>
</div>