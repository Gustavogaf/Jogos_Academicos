@model IEnumerable<Jogos_Academicos.Models.Evento>
@using Jogos_Academicos.Models.Enums

@{
    ViewData["Title"] = "Início";
}

<style>
    /* CSS Rápido apenas para esta tela */
    .hero-section {
        background-color: #6d28d9;
        color: white;
        padding: 40px 20px;
        border-radius: 10px;
        margin-bottom: 30px;
        text-align: center;
    }

    .grid-eventos {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }

    .card-evento {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        background: white;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        transition: transform 0.2s;
        display: flex;
        flex-direction: column;
    }

        .card-evento:hover {
            transform: translateY(-5px);
            border-color: #6d28d9;
        }

    .btn-matamata {
        display: block;
        margin-top: 15px;
        text-align: center;
        background-color: #fff;
        color: #dc3545; /* Vermelho para destaque */
        padding: 8px;
        border: 1px solid #dc3545;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.2s;
    }

        .btn-matamata:hover {
            background-color: #dc3545;
            color: white;
        }

    .home-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 0 20px;
    }

</style>
<div class="home-container">
<div class="hero-section">
    <h1>Bem-vindo aos Jogos Acadêmicos!</h1>
    <p>Acompanhe os resultados, tabelas e próximos jogos do seu curso.</p>
</div>

<h2 style="color: #6d28d9; margin-bottom: 20px;">Eventos Disponíveis</h2>

<div class="grid-eventos">
    @foreach (var evento in Model)
    {
        <div class="card-evento">
            <h3>@evento.Nome</h3>
            <p><strong>Modalidade:</strong> @evento.Esporte?.Nome</p>
            <p><strong>Data:</strong> @evento.Data.ToString("dd/MM/yyyy")</p>
            <p><strong>Nível:</strong> @evento.Nivel</p>

            <hr style="margin: 10px 0; border-color: #eee;">

            <p style="font-size: 0.9em; color: #666;">Grupos:</p>

            <div style="flex-grow: 1;">
                @if (evento.Grupos != null)
                {
                    @foreach (var grupo in evento.Grupos)
                    {
                        <a asp-controller="Grupo" asp-action="Detalhes" asp-route-id="@grupo.Id"
                           style="color: #6d28d9; display: block; margin-bottom: 5px; font-weight: bold; text-decoration: none;">
                            ➜ Ver Classificação @grupo.Nome
                        </a>
                    }
                }
            </div>

            @if (evento.Jogos != null && evento.Jogos.Any(j => j.Fase != FaseTorneio.Grupos))
            {
                <a asp-controller="Evento" asp-action="VisualizarMataMata" asp-route-id="@evento.Id" class="btn-matamata">
                    🏆 Ver Fase Final (Mata-Mata)
                </a>
            }
        </div>
    }
</div>
</div>