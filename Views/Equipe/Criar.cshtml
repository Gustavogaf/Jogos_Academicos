@model Jogos_Academicos.Models.Equipe

@{
    ViewData["Title"] = "Nova Equipe";
}

<div class="container" style="max-width: 600px; padding: 20px;">
    <h2 style="color: #6d28d9; margin-bottom: 20px;">Cadastrar Nova Equipe</h2>

    <form asp-action="Criar" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Nome" class="control-label fw-bold">Nome da Equipe</label>
            <input asp-for="Nome" class="form-control" placeholder="Ex: Águias do Direito" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EsporteId" class="control-label fw-bold">Modalidade</label>
            <select asp-for="EsporteId" class="form-control" asp-items="ViewBag.EsporteId">
                <option value="">Selecione o esporte...</option>
            </select>
            <span asp-validation-for="EsporteId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="control-label fw-bold">Curso Representado</label>
            <input type="text" class="form-control" value="@ViewBag.NomeCurso" readonly style="background-color: #e9ecef;" />
            <small class="text-muted">A equipe é automaticamente vinculada ao seu curso.</small>
        </div>

        <div class="form-group mb-3">
            <label class="control-label fw-bold">Selecionar Atletas</label>
            <select name="atletasIds" class="form-control" asp-items="ViewBag.Atletas" multiple style="height: 150px;">
            </select>
            <small class="text-muted">Segure a tecla <b>Ctrl</b> para selecionar múltiplos atletas.</small>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary w-100" style="background-color: #6d28d9; border: none; padding: 10px;">
                Salvar Equipe
            </button>
        </div>

        <div class="text-center mt-3">
            <a asp-action="MinhasEquipes">Cancelar e Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}