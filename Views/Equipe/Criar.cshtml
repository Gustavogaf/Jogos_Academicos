@model Jogos_Academicos.Models.Equipe

@{
    ViewData["Title"] = "Nova Equipe";
    Layout = null; // Caso não queira layout padrão, ou remova se usar _Layout
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/criar_equipe.css">
</head>
<body>

    <div class="form-container">
        <h2 class="form-title">
            <i class="bi bi-shield-plus"></i> Nova Equipe
        </h2>

        <form asp-action="Criar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-4">
                <label asp-for="Nome" class="form-label">Nome da Equipe</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-fonts"></i></span>
                    <input asp-for="Nome" class="form-control border-start-0 ps-0" placeholder="Ex: Águias do Direito" style="border-left: none;" />
                </div>
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="EsporteId" class="form-label">Modalidade Esportiva</label>
                <select asp-for="EsporteId" class="form-control" asp-items="ViewBag.EsporteId">
                    <option value="">Selecione o esporte...</option>
                </select>
                <span asp-validation-for="EsporteId" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Curso Representado</label>
                <div class="input-group">
                    <span class="input-group-text" style="background-color: #f8f9fa;"><i class="bi bi-mortarboard-fill"></i></span>
                    <input type="text" class="form-control" value="@ViewBag.NomeCurso" readonly />
                </div>
                <small class="text-muted" style="font-size: 0.8em;">
                    <i class="bi bi-info-circle"></i> A equipe é vinculada automaticamente ao seu curso.
                </small>
            </div>

            <div class="mb-4">
                <label class="form-label">Selecionar Atletas Titulares/Reservas</label>

                <div class="athletes-selection-box">
                    @if (ViewBag.Atletas != null)
                    {
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Atletas)
                        {
                            <div class="athlete-checkbox-item">
                                <input class="form-check-input" type="checkbox" name="atletasIds" value="@item.Value" id="atleta_@item.Value">
                                <label class="form-check-label" for="atleta_@item.Value">
                                    <i class="bi bi-person"></i> @item.Text
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted p-3">
                            Nenhum atleta disponível no seu curso.
                        </div>
                    }
                </div>
                <small class="text-muted" style="font-size: 0.8em;">Marque as caixas para adicionar os atletas.</small>
            </div>

            <button type="submit" class="btn-save">
                Salvar Equipe
            </button>

            <a asp-action="MinhasEquipes" class="link-cancel">
                Cancelar e Voltar
            </a>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>