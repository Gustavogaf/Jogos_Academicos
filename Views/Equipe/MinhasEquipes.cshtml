@model IEnumerable<Jogos_Academicos.Models.Equipe>

@{
    ViewData["Title"] = "Minhas Equipes";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/minhas_equipes.css">
</head>
<body>

    <div class="container py-5">

        <div class="page-header">
            <h2 class="page-title">Gerenciar Equipes</h2>
            <a asp-action="Criar" class="btn-new-team">
                <i class="bi bi-plus-lg"></i> Nova Equipe
            </a>
        </div>

        @if (TempData["Sucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Sucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="empty-state">
                <i class="bi bi-people empty-icon"></i>
                <h4 class="text-muted">Nenhuma equipe encontrada</h4>
                <p class="mb-4">Você ainda não cadastrou nenhuma equipe para os jogos.</p>
                <a asp-action="Criar" class="btn btn-outline-primary">Cadastrar Primeira Equipe</a>
            </div>
        }
        else
        {
            <div class="teams-grid">
                @foreach (var item in Model)
                {
                    <div class="team-card">
                        <div class="card-header-custom">
                            <span class="sport-badge">
                                @item.Esporte?.Nome
                            </span>
                            <h3 class="team-name">@item.Nome</h3>
                            <div class="course-name">
                                <i class="bi bi-mortarboard-fill me-1"></i> @item.Curso?.Nome
                            </div>
                        </div>

                        <div class="card-body-custom">
                            <span class="athletes-label">
                                <i class="bi bi-people-fill me-1"></i> ATLETAS INSCRITOS (@(item.Atletas?.Count() ?? 0))
                            </span>

                            @if (item.Atletas != null && item.Atletas.Any())
                            {
                                <ul class="athlete-list">
                                    @foreach (var atleta in item.Atletas)
                                    {
                                        <li class="athlete-item">
                                            <i class="bi bi-person-circle athlete-icon"></i>
                                            @atleta.NomeCompleto
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="text-muted small mt-2">
                                    <em>Nenhum atleta vinculado ainda.</em>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-secondary">
                <i class="bi bi-arrow-left"></i> Voltar ao Início
            </a>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>