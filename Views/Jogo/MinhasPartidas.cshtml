@model IEnumerable<Jogos_Academicos.Models.Jogo>

@{
    ViewData["Title"] = "Área do Árbitro";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary">Minhas Partidas Pendentes</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Você não possui partidas pendentes no momento.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var jogo in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-dark text-white d-flex justify-content-between">
                            <span>@jogo.Evento?.Nome</span>
                            <span class="badge bg-warning text-dark">@jogo.Fase</span>
                        </div>
                        <div class="card-body">
                            <p class="text-muted text-center mb-3">
                                @jogo.DataHora.ToString("dd/MM/yyyy HH:mm")
                            </p>

                            <form asp-action="RegistrarResultado" method="post" class="text-center">
                                <input type="hidden" name="JogoId" value="@jogo.Id" />

                                <div class="d-flex justify-content-center align-items-center gap-2 mb-3">
                                    <div class="text-end" style="width: 40%;">
                                        <strong>@jogo.EquipeA?.Nome</strong>
                                        <div class="form-check d-flex justify-content-end mt-1">
                                            <input class="form-check-input me-1" type="checkbox" name="WoA" value="true" id="woA_@jogo.Id">
                                            <label class="form-check-label small text-danger" for="woA_@jogo.Id">W.O.</label>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-1">
                                        <input type="number" name="PlacarA" class="form-control text-center fw-bold" style="width: 60px;" min="0">
                                        <span class="fw-bold">X</span>
                                        <input type="number" name="PlacarB" class="form-control text-center fw-bold" style="width: 60px;" min="0">
                                    </div>

                                    <div class="text-start" style="width: 40%;">
                                        <strong>@jogo.EquipeB?.Nome</strong>
                                        <div class="form-check mt-1">
                                            <input class="form-check-input me-1" type="checkbox" name="WoB" value="true" id="woB_@jogo.Id">
                                            <label class="form-check-label small text-danger" for="woB_@jogo.Id">W.O.</label>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-success w-100 fw-bold">
                                    Registrar Resultado
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (TempData["Erro"] != null)
{
    <script>
        // Dispara o alerta do navegador assim que a página carrega
        window.onload = function() {
            alert('@Html.Raw(TempData["Erro"])');
        };
    </script>
}

@if (TempData["Sucesso"] != null)
{
    <script>
        window.onload = function() {
            // Opcional: Alerta também para sucesso, ou use Toast
            // alert('@Html.Raw(TempData["Sucesso"])');
        };
    </script>
    <div class="alert alert-success position-fixed bottom-0 end-0 m-3" role="alert" style="z-index: 1000;">
        @TempData["Sucesso"]
    </div>
}