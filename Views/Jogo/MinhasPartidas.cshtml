@model IEnumerable<Jogos_Academicos.Models.Jogo>

@{
    ViewData["Title"] = "Área do Árbitro";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/partidas.css">
</head>
<body>

    <div class="container py-5">
        <div class="arbitro-header d-flex justify-content-between align-items-center">
            <h2>Minhas Partidas Pendentes</h2>
            <a href="/" class="btn btn-outline-secondary btn-sm">Voltar</a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center shadow-sm">
                <h4 class="alert-heading">Tudo tranquilo!</h4>
                <p class="mb-0">Você não possui partidas pendentes de arbitragem no momento.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var jogo in Model)
                {
                    <div class="col-md-6 col-lg-6">
                        <div class="match-card">
                            <div class="match-card-header">
                                <span class="event-name" title="@jogo.Evento?.Nome">
                                    <i class="bi bi-trophy-fill me-1"></i> @jogo.Evento?.Nome
                                </span>
                                <span class="fase-badge">@jogo.Fase</span>
                            </div>

                            <div class="match-card-body">
                                <span class="match-time">
                                    📅 @jogo.DataHora.ToString("dd/MM/yyyy") às @jogo.DataHora.ToString("HH:mm")
                                </span>

                                <form asp-action="RegistrarResultado" method="post">
                                    <input type="hidden" name="JogoId" value="@jogo.Id" />

                                    <div class="scoreboard">
                                        <div class="team-box">
                                            <span class="team-name">@jogo.EquipeA?.Nome</span>
                                            <div class="wo-section">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="WoA" value="true" id="woA_@jogo.Id">
                                                    <label class="wo-check-label" for="woA_@jogo.Id">W.O.</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="score-inputs">
                                            <input type="number" name="PlacarA" class="input-gols" min="0" placeholder="0">
                                            <span class="versus-divider">X</span>
                                            <input type="number" name="PlacarB" class="input-gols" min="0" placeholder="0">
                                        </div>

                                        <div class="team-box">
                                            <span class="team-name">@jogo.EquipeB?.Nome</span>
                                            <div class="wo-section">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="WoB" value="true" id="woB_@jogo.Id">
                                                    <label class="wo-check-label" for="woB_@jogo.Id">W.O.</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn-registrar">
                                        Confirmar Resultado
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @if (TempData["Erro"] != null)
    {
        <script>
            alert('@Html.Raw(TempData["Erro"])');
        </script>
    }
    @if (TempData["Sucesso"] != null)
    {
        <script>
            // Exemplo simples de feedback visual
            alert('@Html.Raw(TempData["Sucesso"])');
        </script>
    }
</body>
</html>