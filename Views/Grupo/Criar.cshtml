@model Jogos_Academicos.Models.Grupo

@{
    ViewData["Title"] = "Novo Grupo";
}

<div class="container" style="padding: 20px;">
    <h2 style="color: #6d28d9;">Novo Grupo</h2>
    <p class="text-muted">Defina o nome do grupo para adicionar equipes.</p>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Criar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="EventoId" value="@ViewBag.EventoId" />

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="control-label fw-bold">Nome do Grupo</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Grupo A" autofocus />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary" style="background-color: #6d28d9; border: none;">
                        Próximo: Adicionar Equipes &rarr;
                    </button>

                    <a asp-controller="Evento" asp-action="Index" class="btn btn-outline-secondary">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
