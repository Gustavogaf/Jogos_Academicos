@model IEnumerable<Jogos_Academicos.Models.Evento>

@{
    ViewData["Title"] = "Painel do Coordenador";
}

<link rel="stylesheet" href="~/css/coordenador.css">

<div class="container-coordenador">
    <div class="header-content">
        <h2>Gerenciamento de Eventos</h2>
        <a asp-action="Criar" class="btn-novo">+ Novo Evento</a>
    </div>

    <table class="table-eventos">
        <thead>
            <tr>
                <th>Nome do Evento</th>
                <th>Data</th>
                <th>Esporte</th>
                <th>Nível</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Data.ToString("dd/MM/yyyy")</td>
                    <td>@item.Esporte?.Nome</td>
                    <td>@item.Nivel</td>

                    <td class="acoes-cell">
                        <div class="acoes-principais">
                            <a asp-controller="Equipe"
                               asp-action="Criar"
                               asp-route-eventoId="@item.Id"
                               class="btn-acao btn-outline">
                                Inscrever Time
                            </a>

                            <a asp-controller="Grupo"
                               asp-action="Criar"
                               asp-route-eventoId="@item.Id"
                               class="btn-acao btn-success">
                                + Novo Grupo
                            </a>
                        </div>

                        @if (item.Grupos != null && item.Grupos.Any())
                        {
                            <details class="grupos-box">
                                <summary>Grupos (@item.Grupos.Count)</summary>

                                @foreach (var grupo in item.Grupos)
                                {
                                    <a asp-controller="Grupo"
                                       asp-action="Detalhes"
                                       asp-route-id="@grupo.Id"
                                       class="grupo-link">
                                        ➜ @grupo.Nome
                                    </a>
                                }
                            </details>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>