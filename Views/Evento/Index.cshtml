@model IEnumerable<Jogos_Academicos.Models.Evento>

@{
    ViewData["Title"] = "Painel do Coordenador";
}

<link rel="stylesheet" href="~/css/coordenador.css">

<div class="container-coordenador">
    <div class="header-content">
        <h2>Gerenciamento de Eventos</h2>
        <a asp-action="Criar" class="btn-novo">+ Novo Evento</a>
    </div>

    <table class="table-eventos">
        <thead>
            <tr>
                <th>Nome do Evento</th>
                <th>Data</th>
                <th>Esporte</th>
                <th>Nível</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Data.ToString("dd/MM/yyyy")</td>
                    <td>@item.Esporte?.Nome</td>
                    <td>@item.Nivel</td>

                    <td>
                        <div class="d-flex flex-column gap-1">
                            <a asp-controller="Equipe" asp-action="Criar" asp-route-eventoId="@item.Id" class="btn-acao">
                                Inscrever Time
                            </a>

                            <a asp-controller="Grupo" asp-action="Criar" asp-route-eventoId="@item.Id" class="btn-acao" style="background-color: #28a745; color: white;">
                                + Novo Grupo
                            </a>
                        </div>

                        @if (item.Grupos != null && item.Grupos.Any())
                        {
                            <div style="margin-top: 8px; border-top: 1px solid #ccc; padding-top: 5px;">
                                <small style="color: #666; font-weight: bold;">Grupos:</small>
                                @foreach (var grupo in item.Grupos)
                                {
                                    <a asp-controller="Grupo" asp-action="Detalhes" asp-route-id="@grupo.Id" style="display:block; font-size: 0.9em; color: #6d28d9; text-decoration: none; margin-top: 2px;">
                                        ➜ Gerenciar @grupo.Nome
                                    </a>
                                }
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>