@model IEnumerable<Jogos_Academicos.Models.Evento>

@{
    ViewData["Title"] = "Gestão de Torneio";
}

<div class="container" style="padding: 20px;">
    <h2 style="color: #6d28d9; margin-bottom: 20px;">Painel de Gestão do Árbitro</h2>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success">@TempData["Sucesso"]</div>
    }
    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger">@TempData["Erro"]</div>
    }

    <div class="card">
        <div class="card-header bg-dark text-white">
            Eventos Disponíveis
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <p>Não há eventos cadastrados.</p>
            }
            else
            {
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Evento</th>
                            <th>Status</th>
                            <th>Ações de Controle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            bool temJogos = item.Grupos != null && item.Grupos.SelectMany(g => g.Jogos).Any();

                            <tr>
                                <td>
                                    <strong>@item.Nome</strong><br />
                                    <small class="text-muted">@item.Esporte?.Nome - @item.Data.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    @if (!temJogos)
                                    {
                                        <span class="badge bg-secondary">Não Iniciado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Em Andamento</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        @if (item.Grupos != null && item.Grupos.Any())
                                        {
                                            <a asp-controller="Grupo" asp-action="Detalhes" asp-route-id="@item.Grupos.First().Id"
                                               class="btn btn-outline-info btn-sm">
                                                👁 Ver Tabelas
                                            </a>
                                        }

                                        @if (!temJogos)
                                        {
                                            <form asp-action="GerarJogosFaseGrupos" method="post">
                                                <input type="hidden" name="eventoId" value="@item.Id" />
                                                <button type="submit" class="btn btn-primary btn-sm fw-bold">
                                                    🎲 Gerar Fase de Grupos
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="AvancarFase" method="post" onsubmit="return confirm('Deseja avançar para a próxima fase do mata-mata? Certifique-se que todos os jogos da fase atual foram finalizados.');">
                                                <input type="hidden" name="eventoId" value="@item.Id" />
                                                <button type="submit" class="btn btn-warning btn-sm fw-bold">
                                                    ⚡ Gerar Próxima Fase
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="mt-3">
        <small class="text-muted">
            <i class="bi bi-info-circle"></i> O botão <strong>"Gerar Fase de Grupos"</strong> cria a tabela inicial de pontos corridos.<br />
            <i class="bi bi-lightning-charge"></i> O botão <strong>"Gerar Próxima Fase"</strong> analisa os classificados e cria as chaves eliminatórias (Oitavas, Quartas, etc).
        </small>
    </div>
</div>